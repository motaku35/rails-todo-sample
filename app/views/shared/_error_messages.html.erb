<!-- errorメッセージなど複数のviewで使われるパーシャルを置くためにsharedディレクトリを使う -->

<% if @task.errors.any? %>
  <div id = "error_explanation">
    <div class = "alert alert-danger">
      the from contains <%= pluralize(@task.errors.count, "error") %>
    </div>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>